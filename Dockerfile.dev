# CTI Aggregator - Development Docker Build
# For development with hot-reload support

FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies for native modules and development tools
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code (will be overridden by volume mounts in docker-compose)
COPY . .

# Create necessary directories
RUN mkdir -p attached_assets

# Set environment variables
ENV NODE_ENV=development \
    PORT=5000

# Expose port
EXPOSE 5000

# Start in development mode with hot-reload
CMD ["npm", "run", "dev"]